@page
@model EmailModel
@{
	ViewData["Title"] = "Manage Email";
	ViewData["ActivePage"] = ManageNavPages.Email;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row form mx-0">
	<div class="col-md-6">
		<form id="email-form" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label class="form__label" style="color: #A782E9;" asp-for="Email"></label>
				@if (Model.IsEmailConfirmed)
				{
					<div class="input-group">
						<input asp-for="Email" class="form__input" disabled />
						@*<div class="input-group-append">
							<span class="input-group-text text-success font-weight-bold" style="color:#fff">✓</span>
							</div>*@
					</div>
				}
				else
				{
					<input asp-for="Email" class="form__input" disabled />
					<button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
				}
			</div>
			<div class="form-group">
				<label class="form__label" style="color: #A782E9;" asp-for="Input.NewEmail"></label>

				<div class="input-group">
					<input asp-for="Input.NewEmail" class="form__input" />
					<span asp-validation-for="Input.NewEmail" class="text-danger"></span>
				</div>
			</div>
			<button class="form__btn mt-3" id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">Change email</button>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
