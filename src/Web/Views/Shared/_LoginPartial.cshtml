@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="nav navbar" style="justify-content: end">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item d-inline-block">
			<a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
		</li>
		<li class="nav-item d-inline-block">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item d-inline-block">
			<a class="header__login nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item d-inline-block">
			<a class="header__login nav-link" asp-area="Identity" asp-page="/Account/Login">Log in</a>
		</li>
	}
</ul>
